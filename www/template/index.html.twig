{% extends 'layouts/main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="row">
            {% for trailer in trailers %}
                <div class="col-md-4">
                    <div class="card mb-2">
                        <div class="card-body">
                            <div class="card-title">
                                <h4><a href="/movie/{{ trailer.id }}">{{ trailer.title }}</a></h4>
                            </div>
                            <img width="100%" src="{{ trailer.image }}" alt="{{ trailer.title }}">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
